%ul.breadcrumb.well
  %li
    = link_to("Simulators", simulators_path)
    %span.divider /
  %li
    - sim = @param_set.simulator
    = link_to(sim.name, simulator_path(sim))
    %span.divider /
  %li
    = link_to(@param_set.to_param, parameter_set_path(@param_set))
    %span.divider /
  %li
    = @run.to_param


.page-header
  %h1 run

%table.table.table-condensed
  %thead
  %tbody
    %tr
      %th ID
      %td= @run.to_param
    %tr
      %th status
      %td= @run.status
    %tr
      %th job
      %td= # @run.job  # IMPLEMENT ME
    %tr
      %th seed
      %td= @run.seed
    %tr
      %th hostname
      %td= @run.hostname
    %tr
      %th CPU time
      %td= formatted_elapsed_time(@run.cpu_time)
    %tr
      %th real time
      %td= formatted_elapsed_time(@run.real_time)
    %tr
      %th created at
      %td= @run.created_at
    %tr
      %th updated at
      %td= @run.updated_at
    %tr
      %th started at
      %td= @run.started_at
    %tr
      %th finished at
      %td= @run.finished_at
    %tr
      %th included at
      %td= @run.included_at

%h3 Directory
%pre= @run.dir

%h3 Results
%ul
  - @result_file_paths.each do |file_path|
    %li
      %a{:href => file_path_to_link_path(file_path)}
        = File.basename(file_path)
        %br
        - if file_path =~ /\.png$/i or file_path =~ /\.jpg$/i
          = image_tag(file_path_to_link_path(file_path), :width => '200px')

