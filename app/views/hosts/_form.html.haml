= form_for @host, html: {class: 'form-horizontal'} do |f|
  = render partial: 'shared/error_messages', locals: {error_messages: @host.errors.full_messages}
  .control-group
    = f.label(:name, class: 'control-label')
    .controls
      = f.text_field(:name, class: 'text_field')
  .control-group
    = f.label(:hostname, class: 'control-label')
    .controls
      = f.text_field(:hostname, class: 'text_field')
  .control-group
    = f.label(:user, class: 'control-label')
    .controls
      = f.text_field(:user, class: 'text_field')
  .control-group
    = f.label(:port, class: 'control-label')
    .controls
      = f.number_field(:port, class: 'number_field')
  .control-group
    = f.label(:ssh_key, class: 'control-label')
    .controls
      = f.text_field(:ssh_key, class: 'text_field')
  .control-group
    = f.label(:scheduler_type, class: 'control-label')
    .controls
      = f.select(:scheduler_type, SchedulerWrapper::TYPES)
  .control-group
    = f.label(:work_base_dir, class: 'control-label')
    .controls
      = f.text_field(:work_base_dir, class: 'text_field')
  .control-group
    = f.label(:max_num_jobs, class: 'control-label')
    .controls
      = f.text_field(:max_num_jobs, class: 'text_field')
  .control-group
    = f.label(:script_header_template, class: 'control-label')
    .controls
      = f.text_area(:script_header_template, style: "width: auto", rows: 8)
  .control-group
    .control-label
      Executable_simulators
    .controls
      = hidden_field_tag "host[executable_simulator_ids][]", nil
      - Simulator.all.each do |sim|
        %label{ for: dom_id(sim) }
          = check_box_tag "host[executable_simulator_ids][]", sim.id, @host.executable_simulator_ids.include?(sim.id), id: dom_id(sim)
          = sim.name

  .form-actions
    = f.submit('Save', class: 'btn btn-primary')
    = link_to('Cancel', (@host.persisted? ? @host : hosts_path), class: 'btn')