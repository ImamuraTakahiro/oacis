= form_for @host, html: {class: 'form-horizontal'} do |f|
  = render partial: 'shared/error_messages', locals: {error_messages: @host.errors.full_messages}
  .control-group
    = f.label(:name, class: 'control-label')
    .controls
      = f.text_field(:name, class: 'text_field')
  .control-group
    = f.label(:hostname, class: 'control-label')
    .controls
      = f.text_field(:hostname, class: 'text_field')
  .control-group
    = f.label(:user, class: 'control-label')
    .controls
      = f.text_field(:user, class: 'text_field')
  .control-group
    = f.label(:port, class: 'control-label')
    .controls
      = f.number_field(:port, class: 'number_field')
  .control-group
    = f.label(:ssh_key, class: 'control-label')
    .controls
      = f.text_field(:ssh_key, class: 'text_field')
  .control-group
    = f.label(:show_status_command, class: 'control-label')
    .controls
      = f.text_field(:show_status_command, class: 'text_field')
  .control-group
    = f.label(:submission_command, class: 'control-label')
    .controls
      = f.text_field(:submission_command, class: 'text_field')
  .control-group
    = f.label(:work_base_dir, class: 'control-label')
    .controls
      = f.text_field(:work_base_dir, class: 'text_field')
  .control-group
    = f.label(:simulator_base_dir, class: 'control-label')
    .controls
      = f.text_field(:simulator_base_dir, class: 'text_field')
  .form-actions
    = f.submit('Save', class: 'btn btn-primary')
    = link_to('Cancel', (@host.persisted? ? @host : hosts_path), class: 'btn')