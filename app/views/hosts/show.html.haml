.page-header
  %h1= "Host: #{@host.name}"

%table.table.table-striped
  %thead
  %tbody
    %tr
      %th Name
      %td= @host.name
    %tr
      %th Hostname
      %td= @host.hostname
    %tr
      %th User
      %td= @host.user
    %tr
      %th Port
      %td= @host.port
    %tr
      %th SSH key
      %td= @host.ssh_key
    %tr
      %th Scheduler type
      %td= @host.scheduler_type
    %tr
      %th Work base directory
      %td= @host.work_base_dir
    %tr
      %th Maximum number of jobs
      %td= @host.max_num_jobs
    %tr
      %th Script Header Template
      %td
        %pre= @host.script_header_template
    %tr
      %th Executable simulators
      %td= raw( @host.executable_simulators.map {|sim| h(sim.name) }.join('<br />') )

.form-actions
  = link_to 'Edit', edit_host_path(@host), class: 'btn btn-info'
  = link_to 'Back to Index', hosts_path, class: 'btn'
  = link_to 'Destroy', @host, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning'

%hr
%h3 Host Status
%pre= @status
