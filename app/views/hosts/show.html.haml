.page-header
  %h1= "Host: #{@host.name}"

%table.table.table-striped
  %thead
  %tbody
    %tr
      %th Name
      %td= @host.name
    %tr
      %th Hostname
      %td= @host.hostname
    %tr
      %th User
      %td= @host.user
    %tr
      %th Port
      %td= @host.port
    %tr
      %th SSH key
      %td= @host.ssh_key
    %tr
      %th Show status command
      %td= @host.show_status_command
    %tr
      %th Submission command
      %td= @host.submission_command
    %tr
      %th Work base directory
      %td= @host.work_base_dir
    %tr
      %th Simulator base directory
      %td= @host.simulator_base_dir

= link_to 'Edit', edit_host_path(@host), class: 'btn btn-info'
= link_to 'Back to Index', hosts_path, class: 'btn'
= link_to 'Destroy', @host, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning'

%hr
%h3 Host Status
%pre= @status

