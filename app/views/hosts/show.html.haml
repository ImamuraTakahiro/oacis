.page-header
  %h1= "Host: #{@host.name}"

%div.tabbable
  %ul.nav.nav-tabs
    %li
      %a{"href"=>"#tab-about", "data-toggle" => "tab"} About
    %li.active
      %a{"href"=>"#tab-info", "data-toggle" => "tab"} Information

  %div.tab-content
    %div.tab-pane#tab-about
      = render "about"
    %div.tab-pane.active#tab-info
      = render "info"
