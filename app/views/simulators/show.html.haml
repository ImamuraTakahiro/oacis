- model_class = Simulator
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @simulator.name
%p
  %strong= model_class.human_attribute_name(:parameter_keys) + ':'
  %br
  = @simulator.parameter_keys
%p
  %strong= model_class.human_attribute_name(:execution_command) + ':'
  %br
  = @simulator.execution_command

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), simulators_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_simulator_path(@simulator), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), simulator_path(@simulator), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
