- model_class = Simulator
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped.table-hover
  %thead
    %tr
      %th Name
      %th Updated_at
      %th Progress
  %tbody.sortable{data: {'sort-url' => _sort_simulators_url }}
    - @simulators.each do |simulator|
      = content_tag_for :tr, simulator do
        %td= link_to h(simulator.name), simulator_path(simulator)
        %td= distance_to_now_in_words(simulator.updated_at)
        - counts = simulator.runs_status_count
        - counts.delete(:cancelled)
        %td#progress= progress_bar(counts.values.inject(:+), counts[:finished], counts[:failed], counts[:running])

.form-actions
  %a.btn.btn-primary{href: new_simulator_path} New Simulator

:javascript
  $(function() {
    $('.sortable').sortable({
      axis: 'y',
      update: function() {
        $.post( $(this).data('sort-url'), $(this).sortable('serialize') );
      }
    });
  });
